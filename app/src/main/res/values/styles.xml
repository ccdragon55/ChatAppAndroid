<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ChatInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">16dp</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="hintTextColor">@color/input_hint</item>
    </style>

    <style name="ChatInputShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- 圆形 ImageView 样式 -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 圆角卡片样式 -->
    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>