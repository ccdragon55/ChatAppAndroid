<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GreetingActivity">
    <Button
        android:id="@+id/gotoLoginPageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_loginPage">
    </Button>
    <EditText
        android:id="@+id/greetingEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greetingEditText">
    </EditText>
    <Button
        android:id="@+id/greetingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_greeting">
    </Button>
</LinearLayout>